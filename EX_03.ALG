algoritmo "EX_03"
var
   Nome: Caracter
   Salario: Real
inicio
      Escreva("Digite o nome do funcionário: ")
      Leia(Nome)
      Escreva("Digite o salário de funcionário: ")
      Leia(Salario)
      
      Escreval("Nome do Funcionário: ",Nome)
      Escreval("Salário: ",Salario)
      Escreval("O funcionário ",Nome," tem um salário de R$",Salario," em Junho")
fimalgoritmo